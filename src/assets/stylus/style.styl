@import 'reset.styl'
@import 'top.styl'
@import 'inputfield.styl'
@import 'card.styl'

#app
  background url('../images/bg.jpg') center center no-repeat
  background-size cover
  width 100%
  height 100vh
  overflow auto

.header
  background rgba(#fff, 0.7)
  padding 15px 0
  backdrop-filter: blur(12px)
  .header-inner
    width 1000px
    margin 0 auto
  .title
    text-align center
    font-family 'Noto Serif', serif
    font-display swap
    span
      display inline-block
      + span
        margin-left 40px
.main-contents
  min-height calc(100vh - 165px)
.footer
  background #000
  color #fff
  font-size 1.2rem
  text-align center
  padding 20px 0
  margin-top 80px

.sp
  .header
    font-size 2.8rem
    padding 10px 0
    line-height 1.2
    span
      display block
      text-align center
      + span
        margin-left 0
  .main-contents
    min-height auto
  .footer
    font-size 2.4rem
