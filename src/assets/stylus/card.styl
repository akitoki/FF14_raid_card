.card-section
  margin-top 80px
  .card-inner
    width 900px
    margin 0 auto
    .title
      color #fff
      font-size 3rem
      text-align center
      font-family 'Noto Serif', serif
      font-display swap
      margin-bottom 20px
  .button-wrap
    margin-top 40px
    text-align center
    .download
      padding 20px 40px
      appearance none
      border 0
      box-shadow 0
      background #fff
      border-radius 10px
      backdrop-filter: blur(12px)
      cursor pointer
      font-size 2.4rem
    .safari-notice
      margin-top 20px
      color #fff
      font-size 1.4rem
#card-preview
  width 900px
  margin 0 auto
.card-wrap
  width 900px
  height 600px
  border-radius 13px
  overflow hidden
  position relative
  background-repeat no-repeat
  background-position center center
  color #fff
  &.type-tank
    background-image url('../images/bg_tank.png')
  &.type-healer
    background-image url('../images/bg_healer.png')
  &.type-dps
    background-image url('../images/bg_dps.png')
  .frame
    display block
    width 900px
    height 600px
    position absolute
    left 0
    top 0
    background url('../images/frame.png')
    z-index 100
  .card-inner
    .card-column
      display flex
      .chara-img
        width 300px
        height 600px
        img
          width 300px
          height 600px
          object-fit cover
      .param
        padding 25px 35px 0
        .name-block
          display flex
          align-items center
          justify-content center
          .job-icon
            width 48px
            margin 3px 20px 0 0
            img
              width 100%
          .profile
            font-family 'Noto Serif', serif
            font-display swap
            line-height 1.4
            .name
              color #ffc859
              font-weight bold
              font-size 3rem
              text-overflow ellipsis
              max-width 442px
              overflow hidden
              white-space nowrap
            .world
              font-size 2rem
        .contents-block
          margin 10px 0
          border-radius 10px
          background rgba(#000, 0.35)
          padding 20px 25px 0
          height 207px
          .block-inner
            dl.type
              margin 0
              padding-left 45px
              position relative
              line-height 1.4
              &::before
                content ""
                width 32px
                height 32px
                display block
                position absolute
                left 0
                top 6px
                background-repeat no-repeat
                background-position center center
              &.contents
                &::before
                  background-image url('../images/sword.png')
                  background-size contain
              &.time
                &::before
                  background-image url('../images/time.png')
                  background-size contain
              &.vc
                &::before
                  background-image url('../images/vc.png')
                  background-size contain
              &.travel
                &::before
                  background-image url('../images/data-center.png')
                  background-size contain
              &.period
                &::before
                  background-image url('../images/trophy.png')
                  background-size contain
              &.frequency
                &::before
                  background-image url('../images/schedule.png')
                  background-size contain
              dt
                color #ffc859
                font-weight normal
                font-size 1.4rem
              dd
                font-size 1.6rem
            .flex-block
              display flex
              justify-content space-between
              dl.type
                width 160px
          .top-block
            text-align center
            margin-bottom 10px
            dl.type
              display inline-block
              text-align left
              dd
                font-size 2rem
                font-weight bold
          .bottom-block
            margin-top 10px
            .flex-block
              dl.type.frequency
                width 320px
        .bottom-prof-block
          display flex
          justify-content space-between
          .flex-block
            width 250px
            height 240px
            .title
              text-align center
              font-size 2rem
              color #ffc859
              font-family 'Noto Serif', serif
              font-display swap
              margin-bottom 5px
            .comment-block
              background rgba(#000, 0.35)
              border-radius 10px
              padding 15px
              height calc(100% - 35px)
              p
                font-size 1.4rem
                letter-spacing normal
                margin 0
                line-height 1.4
                overflow hidden
                display -webkit-box
                -webkit-box-orient vertical
                -webkit-line-clamp 9
                white-space pre-wrap
            .chart-block
              background rgba(#000, 0.35)
              border-radius 10px
              padding 15px
              height calc(100% - 35px)
              ul.chart
                list-style none
                padding 0
                margin 0
                li
                  display flex
                  align-items center
                  + li
                    margin-top 5px
                  .icon
                    margin-right 10px
                    img
                      width 30px
                  .meter-wrap
                    width 100%
                  .meter
                    height 24px
                    overflow hidden
                    position relative
                    for num in (0..100)
                      &.w{num}
                        width: (num)%
                    &::before
                      content ""
                      display block
                      position absolute
                      left 0
                      top 0
                      width 180px
                      height 100%
                      background linear-gradient(90deg, rgba(255,200,89,1) 0%, rgba(237,119,46,1) 100%)
  .copyright
    font-family 'Noto Serif', serif
    font-size 1rem
    color #fff
    text-align right
    margin-top 8px
.sp
  .card-section
    .card-inner
      .title
        font-size 5rem
  .button-wrap
    margin 100px 0 250px
    text-align center
    .download
      padding 40px 40px
      appearance none
      border 0
      box-shadow 0
      background #fff
      border-radius 10px
      backdrop-filter: blur(12px)
      cursor pointer
      text-align center
      width 100%
      font-size 5rem
    .safari-notice
      margin-top 50px
      color #fff
      font-size 3rem
  .card-modal
    position fixed
    top 0
    left 0
    width 100%
    height 100vh
    height 100dvh
    background rgba(#000, 0.7)
    z-index 1000
    .modal-inner
      position absolute
      left 50%
      top 50%
      transform translate(-50%, -50%)
      width 900px
      text-align center
      img
        max-width 100%
      p
        color #fff
        font-size 4rem
        margin 40px 0
      button
        padding 40px 120px
        appearance none
        border 0
        box-shadow 0
        background #fff
        border-radius 10px
        backdrop-filter: blur(12px)
        cursor pointer
        text-align center
        font-size 5rem
