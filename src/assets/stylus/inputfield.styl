.input-field-wrap
  margin-top 100px
  .scroll-preview
    position fixed
    right 30px
    bottom 30px
    background rgba(#fff, 0.7)
    border-radius 10px
    padding 20px 30px
    font-size 2rem
    cursor pointer
    backdrop-filter: blur(12px)
    transition .3s
    z-index 200
    &:hover
      opacity .7
  .input-field-inner
    width 1000px
    margin 0 auto
    border-radius 10px
    padding 10px 30px
    background rgba(#000, 0.7)
    color #fff
    backdrop-filter: blur(12px)
    .input-column
      + .input-column
        border-top 1px solid #999
      display flex
      padding 20px
      align-items center
      margin 0
      dt
        width 240px
      dd
        flex 1
        margin 0
        p.notice
          font-size 1.6rem
          span
            margin 5px 0
            display inline-block
            font-size 1.2rem
            line-height 1.4
        .job-chart-column
          span
            display inline-block
            margin-right 10px
          .select-wrapper
            + span
              margin-left 20px
          + .job-chart-column
            margin-top 10px
        .weekly
          margin-top 20px
          .wrap
            display inline-block
        .button-list
          margin-top 20px
          button
            border none
            appearance none
            background #fff
            border-radius 5px
            padding 5px 10px
            span
              padding-left 5px
            + button
              margin-left 20px
            &.add-button
              span
                color #0800a9
            &.delete-button
              span
                color #a90000
      textarea
        appearance none
        box-shadow none
        width 100%
        height 150px
        border-radius 10px
        border none
        padding 20px
        white-space pre-wrap
      input[type="text"], input[type="number"]
        border 0
        padding 5px 10px
        box-shadow none
        border-radius 5px
        &.full-width
          width 100%
      label
        margin-bottom 0
        margin-right 10px
        input[type="checkbox"], input[type="radio"]
        span
          display inline-block
          margin-left 5px
      select
        appearance none
        box-shadow none
        border none
        border-radius 5px
        padding 5px 35px 5px 10px
      .select-wrapper
        position relative
        display inline-block
        margin-right 5px
        + .select-wrapper
          margin-left 20px
        &::after
          content ""
          display block
          width 0
          height 0
          border-style solid
          border-width 6px 5px 0 5px
          border-color #454161 transparent transparent transparent
          position absolute
          right 10px
          top 50%
          transform translateY(-50%)
          pointer-events none
.crop-modal-wrapper
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  background rgba(#000, 0.7)
  z-index 100
  .croppwer-container
    width 1000px
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    text-align center
    .notice
      color #fff
      margin-top 10px
      &.sp
        display none
    button
      margin-top 20px
      border none
      background #fff
      border-radius 10px
      padding 20px 30px
      font-size 2rem
      cursor pointer

.sp
  .scroll-preview
    bottom 80px
    width calc(100vw - 80px)
    right 40px
    font-size 4rem
    padding 40px 0
    text-align center
    background #fff
    border 1px solid #999
    &:hover
      opacity 1
  .input-field-inner
    width 960px
    margin 0 20px
    padding 20px 30px
    .input-column
      padding 30px 0
      display block
      dt
        width 100%
        font-size 5rem
        margin-bottom 40px
        padding-bottom 30px
        border-bottom 2px solid #999
      dd
        font-size 4rem
        p.notice
          font-size 4rem
          margin-bottom 40px
          span
            margin 15px 0
            display inline-block
            font-size 3rem
            line-height 1.4
        .weekly
          margin-top 50px
          .wrap
            display block
        .job-chart-column
          span
            margin-right 25px
          + .job-chart-column
            margin-top 30px
        .button-list
          margin-top 40px
          text-align center
          button
            transition 0s
        label
          margin-right 40px
          margin-bottom 20px
        input[type="checkbox"], input[type="radio"]
          transform scale(3)
          display inline-block
          vertical-align 8px
          margin-right 20px
        textarea
          height 400px
          border-radius 10px
      + .input-column
        border-top 0
        margin-top 40px
      input[type="text"], input[type="number"]
        border 0
        padding 20px 40px
        box-shadow none
        border-radius 10px
        &.full-width
          width 100%
      .select-wrapper
        margin-right 20px
        + .select-wrapper
          margin-left 50px
        select
          padding 15px 80px 15px 30px
          border-radius 10px
        &::after
          content ""
          display block
          width 0
          height 0
          border-style solid
          border-width 15px 10px 0 10px
          border-color #454161 transparent transparent transparent
          position absolute
          right 25px
          top 50%
          transform translateY(-50%)
  .crop-modal-wrapper
    .croppwer-container
      .notice
        font-size 3.5rem
        margin 50px 0
        &.pc
          display none
        &.sp
          display block
      button
        font-size 4rem
        padding 30px 50px
