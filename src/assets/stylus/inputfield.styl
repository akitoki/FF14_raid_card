.input-field-wrap
  margin-top 100px
  +mediaSp()
    margin-top 50px
  .scroll-preview
    position fixed
    right 30px
    bottom 30px
    background rgba(#fff, 0.7)
    border-radius 10px
    padding 20px 30px
    font-size 2rem
    cursor pointer
    backdrop-filter: blur(12px)
    transition .3s
    z-index 100
    +mediaPc()
      &:hover
        opacity .7
    +mediaSp()
      background #fff
      right 0
      bottom 40px
      width calc(100% - 30px)
      padding 10px 0
      right 15px
      text-align center
      border-radius 5px
  .input-field-inner
    width 1000px
    margin 0 auto
    border-radius 10px
    padding 10px 30px
    background rgba(#000, 0.7)
    color #fff
    backdrop-filter: blur(12px)
    +mediaSp()
      width 100%
      padding 0px 20px
    .input-column
      +mediaPc()
        + .input-column
          border-top 1px solid #999
      display flex
      padding 20px
      align-items center
      margin 0
      +mediaSp()
        display block
        padding 20px 0
      dt
        width 240px
        +mediaSp()
          width 100%
          border-bottom 1px solid #999
          margin-bottom 15px
          padding-bottom 10px
      dd
        flex 1
        margin 0
        font-size 1.6rem
        p.notice
          font-size 1.6rem
          +mediaSp()
            margin-bottom 15px
          span
            margin 5px 0
            display inline-block
            font-size 1.2rem
            line-height 1.4
        .job-chart-column
          .wrap
            +mediaPc()
              display inline-block
              + .wrap
                margin-left 20px
          span
            display inline-block
            margin-right 10px
            +mediaSp()
              width 60px
          +mediaSp()
            .select-wrapper
              margin-bottom 10px
          + .job-chart-column
            margin-top 10px
            +mediaSp()
              margin-top 25px
        .weekly
          margin-top 20px
          .week-checkbox, .yes-or-no-radio
            display inline-block
        .button-list
          margin-top 20px
          button
            border none
            appearance none
            background #fff
            border-radius 5px
            padding 5px 10px
            +mediaSp()
              font-size 1.4rem
              width calc(50vw - 40px)
            span
              padding-left 5px
            + button
              margin-left 20px
              +mediaSp()
                margin-left 10px
            &.add-button
              span
                color #0800a9
            &.delete-button
              span
                color #a90000
      textarea
        appearance none
        box-shadow none
        width 100%
        height 150px
        border-radius 10px
        border none
        padding 20px
        white-space pre-wrap
        +mediaSp()
          padding 10px
      input[type="text"], input[type="number"]
        border 0
        padding 5px 10px
        box-shadow none
        border-radius 5px
        &.full-width
          width 100%
      label
        margin-bottom 0
        margin-right 10px
        input[type="checkbox"], input[type="radio"]
        span
          display inline-block
          margin-left 5px
      select
        appearance none
        box-shadow none
        border none
        border-radius 5px
        padding 5px 35px 5px 10px
      .select-wrapper
        position relative
        display inline-block
        margin-right 5px
        + .select-wrapper
          margin-left 20px
          +mediaSp()
            margin 15px 0 0
        &.sp-full-width
          width 100%
          select
            width 100%
        &::after
          content ""
          display block
          width 0
          height 0
          border-style solid
          border-width 6px 5px 0 5px
          border-color #454161 transparent transparent transparent
          position absolute
          right 10px
          top 50%
          transform translateY(-50%)
          pointer-events none
.crop-modal-wrapper
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  background rgba(#000, 0.7)
  z-index 100
  +mediaSp()
    padding 0 15px
    width 100vw
  .croppwer-container
    width 1000px
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    text-align center
    +mediaSp()
      width 100vw !important
    .notice
      color #fff
      margin-top 10px
      +mediaSp()
        font-size 1.4rem
    button
      margin-top 20px
      border none
      background #fff
      border-radius 10px
      padding 20px 30px
      font-size 2rem
      cursor pointer
      +mediaSp()
        font-size 1.8rem
        padding 15px 30px
